{
  "compilerOptions": {
    "target": "ES2017",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "useUnknownInCatchVariables": true
  },
  "include": ["src/**/*", "../Core/*"],
  "exclude": ["node_modules", "dist"]
}
